datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @id @default(cuid())
  name  String?
  phone BigInt?
  email String?
  description String?

  Guest Guest?
}

model Guest {
  user   User?  @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String? @unique
  id String @id @default(cuid())
}